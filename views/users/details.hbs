<h1 class=" d-flex justify-content-center mt-4"> details</h1>

<div>

    <div class="card d-flex justify-content-center" style="width: 15rem;">
        <img class="imgprofile" src="{{user.image}}" alt="{{user.username}}">
        <div class="card-body">
            <h5 class="card-title">{{user.username}}</h5>
            <p class="card-title">{{user.email}}</p>
            <p class="card-title">{{user.birthday}}</p>
            <div class="d-flex justify-content-around">


                {{#if userRoles.isThisUser}}
                <a href="/edit-user/{{user._id}}" class="btn btn-primary">edit</a>
                <form action="/delete-user/{{user._id}}" method="post">
                    <input class="btn btn-primary" type="submit" value="delete">
                </form>
                {{/if}}



                {{#if userRoles.isAdmin}}

                <a href="/edit-user/{{user._id}}" class="btn btn-primary">edit</a>
                <form action="/delete-user/{{user._id}}" method="post">
                    <input class="btn btn-primary" type="submit" value="delete">
                </form>
                {{/if}}








            </div>
        </div>
    </div>
</div>