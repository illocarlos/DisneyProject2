<div class="container">

    <div class="row mt-5">




        <div class="detailMaps  flex-column flex-nowrap  align-items-center ">

            <div class="card-body">
                <div class="card-title">
                </div>
            </div>
            {{title}}

            <div class="card-body">
                <div class="card-title">
                    {{description}}
                </div>

                <div class="card-title ">
                    <p>{{formattedDate}}</p>
                    <p>{{formattedTime}}</p>
                </div>
            </div>
            <div class="card-body">
                <div class="card-title">
                    {{location.coordinates.[1]}}
                </div>
            </div>
            <div class="card-body">
                <div class="card-title">
                    {{location.coordinates.[0]}}
                </div>




            </div>
        </div>


        <div class="col-4 d-flex  justify-content-center">

            <input type="hidden" id="lontId" value="{{location.coordinates.[1]}}">
            <input type="hidden" id="lattId" value="{{location.coordinates.[0]}}">

            <div>
                <a class="btn btn-dark" href="/addAttendee/{{_id}}">Confirm assistance</a>
                <a class="btn btn-dark" href="/removeAttendee/{{_id}}">Cancel assistance</a>


                <div class="d-flex  justify-content-between">

                    {{#each attendees }}

                    <div class="cardBody mt-4  card " style="width: 8rem;">

                        <img class=" card-image " src="{{image}}" alt="{{username}}">
                        <div class="mx-auto">
                            <h5>{{username}}</h5>
                        </div>
                        <div>
                            <a href="/details/{{_id}}" class="d-flex flex-row justify-content-center btn">profile</a>
                        </div>
                    </div>

                    {{/each}}
                </div>
            </div>











        </div>
        <div class="col-4">

            <figure class=" myMapDetails" id="myMapDetails" class=""></figure>




        </div>


        <div class="video-container">

            <video autoplay muted loop id="my-video" class="video">

                <source src="../videos/mickey.mp4" type="video/mp4">
            </video>

        </div>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="/js/events-mapId.js"></script>

    <script src="/js/map-styles.js"></script>

    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDISxitdBbdPZR7jLPwPvUrlh7eG6TcF7w&callback=init"></script>