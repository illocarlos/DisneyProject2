<div class="container">
    <div class="row d-flex justify-content-center">
        {{#each characters.data}}
        <div class="col-3 mt-3 me-5">
            <div class="card-style card" style="width: 18rem;">
                <img class="card-image card-img-top" src="{{imageUrl}}" alt="{{name}}">
                <div class="card-body d-flex justify-content-center">
                    <h4 class="card-title">{{name}}</h4>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="d-flex justify-content-between mb-3">

        {{#if prevPage}}
        <a id="prev-page" href="/characters?page={{prevPage}}" class="btn btn-dark">Previous Page</a>
        {{/if}}
        <a class="btn btn-dark" href="#">Return to top</a>
        <a id="adv-page" href="/characters?page={{nextPage}}" class="btn btn-dark">Next Page</a>

    </div>
</div>